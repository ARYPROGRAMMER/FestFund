# ===========================================
# FestFund - Privacy-First Fundraising Platform
# ===========================================

# Environment
NODE_ENV=development

# Application URLs
APP_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Server Configuration
BACKEND_PORT=3001
PORT=3001

# Frontend Public Variables
NEXT_PUBLIC_APP_NAME=FestFund
NEXT_PUBLIC_APP_DESCRIPTION=Privacy-First Donation Platform with Zero-Knowledge Proofs
NEXT_PUBLIC_CHAIN_ID=31337
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Database
MONGODB_URI=mongodb://localhost:27017/festfund
# Production: mongodb+srv://username:password@cluster.mongodb.net/festfund

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_TIMEOUT=86400000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Blockchain Configuration  
NEXT_PUBLIC_BLOCKCHAIN_RPC=http://localhost:8545
BLOCKCHAIN_RPC=http://localhost:8545
CHAIN_ID=31337
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Smart Contract Addresses (Auto-populated during deployment)
NEXT_PUBLIC_FUND_MANAGER_ADDRESS=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0
NEXT_PUBLIC_VERIFIER_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
NEXT_PUBLIC_MOCK_TOKEN_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# Midnight Network ZK Configuration
USE_MOCK_PROOFS=false
MIDNIGHT_RPC_URL=wss://rpc.testnet.midnight.network
ZK_CIRCUIT_PATH=./zk/topk_milestones.compact
ZK_PROOF_MODE=midnight-network
MIDNIGHT_NETWORK_URL=https://rpc.testnet.midnight.network

# Rate Limiting & Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
ENABLE_ERROR_LOGGING=true
ERROR_LOG_FILE=./logs/error.log

# Production Deployment Notes:
# 1. Set NODE_ENV=production
# 2. Update MONGODB_URI to production MongoDB Atlas cluster
# 3. Generate secure random JWT_SECRET (64+ characters)
# 4. Generate secure random SESSION_SECRET (64+ characters)
# 5. Set USE_MOCK_PROOFS=false for real ZK proofs
# 6. Update APP_URL and CORS_ORIGIN to your domain
# 7. Use environment-specific private keys (never commit real keys)
# 8. Enable SSL/HTTPS in production
# 9. Set proper rate limiting values
# 10. Configure proper logging for production monitoring
